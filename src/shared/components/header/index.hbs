<div class="navbar navbar-fixed-top" role="navigation">
  {{!log this level="error"}}
  <div class="container">
    <ul class="navbar-right-ul accountUser">
      <li class="navbar-right">
        <div class="menuOptions" id="menuOptions">
          <span class="accountOptions hidden-xs hidden-sm">
            {{t "MY-ACORN-TV"}}
          </span>
          <span id="clicker">
            <img
              class="accountIcon"
              width="18"
              src="//api.rlje.net/acorn/artwork/size/account-icon?t=Icons"
            />
          </span>
        </div>

        <ul class="drop-select closed" style="display:none;">
          <li>
            <a href="//{{environment}}acorn.tv/browse/recentlywatched/">
              {{t "RECENTLY-WATCHED"}}
            </a>
          </li>
          <li>
            <a href="//{{environment}}acorn.tv/browse/yourwatchlist/">
              {{t "MY-WATCHLIST"}}
            </a>
          </li>
          <li><a href="#accountStatus">{{t "MANAGE-ACCOUNT"}}</a></li>
          <li><a href="#editPassword">{{t "CHANGE-PASSWORD"}}</a></li>
          {{#if Customer.webPaymentEdit}}
            {{#if Customer.StripeEnabled}}
              <li>
                <a href="#updatecard">
                  {{t "UPDATE-BILLING-INFORMATION"}}
                </a>
              </li>
            {{/if}}
            <li><a href="#editEmail">{{t "CHANGE-EMAIL"}}</a></li>
          {{/if}}
          {{#if Session.LoggedIn}}
            <li><a href="#logout">{{t "LOG-OUT"}}</a></li>
          {{else}}
            <li>
              <a href="{{signinEnv}}/signin.jsp?OperationalScenario=STORE">
                {{t "SIGN-IN"}}
              </a>
            </li>
          {{/if}}
        </ul>
      </li>
    </ul>

    <div class="navbar-header">
      <a href="//{{environment}}acorn.tv/">
        <img src="{{atvlogo}}" class="atv-logo" /></a>
      <button
        data-toggle="collapse-side"
        data-target=".side-collapse"
        data-target-2=".side-collapse-container"
        type="button"
        class="navbar-toggle"
      >
        <div>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </div>
      </button>
    </div>

    <div class="navbar-collapse side-collapse in">
      <ul class="nav navbar-nav">
        <li><a href="//{{environment}}acorn.tv/">{{t "HOME"}}</a></li>
        <li><a href="//{{environment}}acorn.tv/browse">{{t "BROWSE"}}</a></li>
        <li>
          <a href="//{{environment}}acorn.tv/schedule">
            {{t "SCHEDULE"}}
          </a>
        </li>
        <li><a href="//support.acorn.tv">{{t "HELP"}}</a></li>
        <li><a id="store-link" href="{{storeEnv}}">{{t "STORE"}}</a></li>
      </ul>
    </div>
  </div>
</div>
